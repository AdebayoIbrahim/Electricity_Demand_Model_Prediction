import matplotlib.pyplot as plt

def plot_predictions(zone_name, results_df, num_points=48):
    """Plot actual vs predicted values for a specific zone"""
    zone_data = results_df[results_df['Zone'] == zone_name]
    
    plt.figure(figsize=(15, 6))
    plt.plot(zone_data['Timestamp'], zone_data['Actual LMP'], 'b-', label='Actual')
    plt.plot(zone_data['Timestamp'], zone_data['Predicted LMP'], 'r--', label='Predicted')
    plt.title(f'{zone_name} Price Forecast')
    plt.xlabel('Time')
    plt.ylabel('Price ($)')
    plt.legend()
    plt.grid()
    plt.show()

# Example visualization for one zone
plot_predictions(zones[0], final_results)
