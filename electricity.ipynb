# ======================
# 1. SETUP & DATA LOADING
# ======================

# Import required packages
import pandas as pd
import numpy as np
import torch
import torch.nn as nn
from sklearn.preprocessing import MinMaxScaler
from torch.utils.data import DataLoader, TensorDataset

# Mount Google Drive to access data files
from google.colab import drive
drive.mount('/content/drive')

# Load the CAISO electricity price dataset
df = pd.read_csv("/content/drive/MyDrive/caiso-electricity.csv")

# ======================
# 2. DATA PREPROCESSING
# ======================

# Convert timestamp column to datetime format and set as index
df['timestamp'] = pd.to_datetime(df['UTC Timestamp (Interval Ending)'], errors='coerce')
df.set_index('timestamp', inplace=True)

# Define parameters
zones = ['SP-15 LMP', 'NP-15 LMP', 'ZP26 LMP', 'PGE-TDLMP', 'SCE-TDLMP']  # Zones to analyze
SEQ_LEN = 24   # Use 24 periods (6 hours) of history for predictions
PRED_LEN = 16  # Predict 16 periods ahead (4 hours)
EPOCHS = 10    # Number of training epochs

# ======================
# 3. MODEL ARCHITECTURE
# ======================

class LMP_LSTM_Multistep(nn.Module):
    """
    LSTM model for multi-step electricity price forecasting
    
    Args:
        input_size: Number of features (1 for univariate)
        hidden_size: Number of LSTM hidden units
        num_layers: Number of LSTM layers
        pred_len: Number of steps to predict ahead
    """
    def __init__(self, input_size=1, hidden_size=64, num_layers=2, pred_len=16):
        super().__init__()
        self.lstm = nn.LSTM(input_size, hidden_size, num_layers, batch_first=True)
        self.fc = nn.Linear(hidden_size, pred_len)  # Outputs predictions for all future steps

    def forward(self, x):
        # x shape: (batch_size, seq_length, input_size)
        out, _ = self.lstm(x)  # LSTM output
        out = self.fc(out[:, -1, :])  # Only use last timestep's output
        return out

# ======================
# 4. DATA PREPARATION
# ======================

def create_multistep_sequences(data, seq_length, pred_length):
    """
    Create input-output sequences for multi-step forecasting
    
    Args:
        data: Time series data
        seq_length: Input sequence length
        pred_length: Output prediction length
    
    Returns:
        xs: Input sequences (n_samples, seq_length, n_features)
        ys: Output sequences (n_samples, pred_length)
    """
    xs, ys = [], []
    for i in range(len(data) - seq_length - pred_length):
        x = data[i:i+seq_length]  # Input window
        y = data[i+seq_length:i+seq_length+pred_length]  # Output window
        xs.append(x)
        ys.append(y)
    return np.array(xs), np.array(ys)

# ======================
# 5. TRAINING PIPELINE
# ======================

# Container for all results
all_results = []

for zone in zones:
    if zone not in df.columns:
        print(f"Skipping {zone} - not found in dataset")
        continue

    print(f"\nProcessing zone: {zone}")
    
    # 5.1 Prepare zone data
    zone_data = df[[zone]].dropna()  # Get zone data and remove missing values
    scaler = MinMaxScaler()  # Normalize data to [0,1] range
    data_scaled = scaler.fit_transform(zone_data)
    
    # 5.2 Create sequences
    X, y = create_multistep_sequences(data_scaled, SEQ_LEN, PRED_LEN)
    X_tensor = torch.tensor(X, dtype=torch.float32)  # Shape: (n_samples, seq_len, 1)
    y_tensor = torch.tensor(y.squeeze(), dtype=torch.float32)  # Shape: (n_samples, pred_len)
    
    # 5.3 Create DataLoader
    dataset = TensorDataset(X_tensor, y_tensor)
    train_loader = DataLoader(dataset, batch_size=64, shuffle=True)
    
    # 5.4 Initialize model
    model = LMP_LSTM_Multistep(pred_len=PRED_LEN)
    criterion = nn.MSELoss()
    optimizer = torch.optim.Adam(model.parameters(), lr=0.001)
    
    # 5.5 Training loop
    print("Starting training...")
    for epoch in range(EPOCHS):
        for xb, yb in train_loader:
            optimizer.zero_grad()
            pred = model(xb)
            loss = criterion(pred, yb)
            loss.backward()
            optimizer.step()
        print(f"Epoch {epoch+1}/{EPOCHS}, Loss: {loss.item():.4f}")
    
    # ======================
    # 6. PREDICTION & EVALUATION
    # ======================
    
    # 6.1 Make predictions
    model.eval()
    with torch.no_grad():
        # Use most recent SEQ_LEN points as input
        input_seq = torch.tensor(data_scaled[-SEQ_LEN:], dtype=torch.float32).unsqueeze(0)
        pred_scaled = model(input_seq).numpy().flatten()
        pred_actual = scaler.inverse_transform(pred_scaled.reshape(-1, 1)).flatten()
    
    # 6.2 Prepare timestamps for predictions
    future_times = pd.date_range(start=zone_data.index[-1], periods=PRED_LEN + 1, freq='15T')[1:]
    
    # 6.3 Get actual values for comparison
    actual_vals = zone_data[-PRED_LEN:].values.flatten()
    if len(actual_vals) < PRED_LEN:
        actual_vals = np.concatenate([actual_vals, [np.nan] * (PRED_LEN - len(actual_vals))])
    
    # 6.4 Calculate errors
    error_vals = np.abs(pred_actual - actual_vals)
    
    # 6.5 Store results
    result_df = pd.DataFrame({
        "Zone": [zone] * len(future_times),
        "Timestamp": future_times,
        "Actual LMP": actual_vals,
        "Predicted LMP": pred_actual,
        "Error": error_vals
    })
    all_results.append(result_df)
    
    print(f"Completed processing for {zone}")

# ======================
# 7. RESULTS COMPILATION
# ======================

# Combine all zone results
final_results = pd.concat(all_results, ignore_index=True)

